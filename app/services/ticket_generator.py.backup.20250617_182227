# âœ… FIX: Lazy loading OpenAI client per evitare errore all'import
_openai_client = None

def get_openai_client():
    """Inizializza OpenAI client solo quando necessario"""
    global _openai_client
    if _openai_client is None:
        try:
            from openai import OpenAI
            api_key = os.getenv("OPENAI_API_KEY")
            if not api_key:
                print("âš ï¸ OPENAI_API_KEY non configurata - funzioni AI disabilitate")
                return None
            _openai_client = OpenAI(api_key=api_key)
        except Exception as e:
            print(f"âš ï¸ Errore inizializzazione OpenAI: {e}")
            return None
    return _openai_client

